@model Budgeteerv1.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="masthead">

    <div class="container">
        <h1 class="masthead-subtitle">
            Signup
        </h1>

    </div> <!-- /.container -->
</div> <!-- /.masthead -->
<hr class="spacer-sm">
<div class="account-wrapper">
    <div class="account-body">
        <h3>Get Started with a Free Account.</h3>
        <h5>Sign up in 30 seconds.</h5>
        @using (Html.BeginForm("Register","Account",FormMethod.Post, new{ @class="form account-form"}))
        {
            @Html.AntiForgeryToken()        
            @Html.ValidationSummary("", new { @class="text-danger"})
            <div class="form-group">                
                @Html.LabelFor(m => m.Email, new { @class="placeholder-hidden"})                
                @Html.TextBoxFor(m => m.Email, new { @class="form-control",id="signup-email",placeholder="Email",tabindex="1"})
            </div> <!-- /.form-group -->
            <div class="form-group">
                @Html.LabelFor(m => m.DisplayName, new { @class="placeholder-hidden"})
                @Html.TextBoxFor(m => m.DisplayName, new {@class="form-control",placeholder="Display Name",tabindex="2",id="signup-fullname" })
            </div> <!-- /.form-group -->            
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class="placeholder-hidden"})
                @Html.PasswordFor(m => m.Password, new { @class="form-control",placeholder="Password",tabindex="3"})
            </div> <!-- /.form-group -->
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "placeholder-hidden" })        
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control",placeholder="Password Confirmation",tabindex="4" })        
            </div>
    
            <div class="form-group">
                <button type="submit" class="btn btn-secondary btn-block btn-lg" tabindex="6">
                    Create My Account &nbsp; <i class="fa fa-play-circle"></i>
                </button>
            </div> <!-- /.form-group -->
        }
    </div> <!-- /.account-body -->
    <div class="account-footer">
        <p>
            Already have an account? &nbsp;
            <a href="@Url.Action("Login","Account")" class="">Login to your Account!</a>
        </p>
    </div> <!-- /.account-footer -->
</div> <!-- /.account-wrapper -->

<br><br><br>
