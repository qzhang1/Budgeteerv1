@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="masthead">
    <!--Start Carousel-->
    <div id="masthead-carousel" class="carousel slide carousel-fade masthead-carousel">
        <div class="carousel-inner">
            
            <div class="item active" style="height: 775px; background-color: #354b5e; background-image: url(/Images/shattered.png);">
                <hr class="spacer-md hidden-xs">
                <hr class="spacer-sm visible-xs">
                <div class="container">
                    <div class="row">
                    
                        <div class="col-md-10 col-md-offset-1 masthead-text text-center animated fadeIn">
                            <h1 class="masthead-title">Welcome to BudgetReady</h1>
                            <h2 class="masthead-title">Start Budgeting and Managing Your Finances Today With BudgetReady!</h2>
                            <div class="masthead-actions">
                                <a href="@Url.Action("Index","Dashboard")" class="btn btn-primary btn-jumbo">
                                    Get Started Today
                                </a>
                            </div> <!-- /.masthead-actions -->

                            <hr class="spacer-sm">
                            <hr class="spacer-xs">
                        </div> <!-- /.masthead-text -->
                        <div class="col-md-12 masthead-img animated fadeInUpBig">
                            <img src="/Images/browser.png" alt="slide2" class="img-responsive" />
                        </div> <!-- /.masthead-img -->
                    </div> <!-- /.row -->
                </div> <!-- /.container -->
            </div> <!-- /.item -->
                        
        </div>  <!-- /.carousel-inner -->
        <!-- Carousel nav -->
    </div>
</div>

<div class="content">
    <section id="section-features" class="home-section">
        <div class="container">
            <div class="heading-block heading-minimal heading-center">
                <h1>
                    Why Choose BudgetReady?
                </h1>
            </div> <!-- /.heading-block -->


            <div class="feature-lg">
                <div class="row">

                    <div class="col-sm-6">
                        <hr class="spacer-sm">
                        <figure class="feature-figure"><img src="~/Images/product01.png" class="img-responsive" alt=""></figure>
                    </div><!-- /.col -->

                    <div class="col-sm-6">
                        <div class="feature-content">                            
                            <h3>Responsive user interface</h3>
                            <p>Choose BudgetReady for your day to day budgetting and keep track of monthly finances. BudgetReady comes packed with
                            simple but responsive user interface and data visualization. Also later versions will allow in app communication between users within the household.</p>
                            <ul class="icons-list">
                                <li>
                                    <i class="icon-li fa fa-check text-primary"></i>
                                    Keep Track of Household Spending
                                </li>
                                <li>
                                    <i class="icon-li fa fa-check text-primary"></i>
                                    Create Household Budgets and whether members are staying on goal
                                </li>
                                <li>
                                    <i class="icon-li fa fa-check text-primary"></i>
                                    Data Visualization of Key Financial Stats
                                </li>
                            </ul>
                        </div> <!-- /.feature-content -->
                    </div><!-- /.col -->

                </div> <!-- /.row -->
            </div> <!-- /.feature-lg -->
        </div>
    </section>

    <section id="section-contact" class="home-section" style="background-color: #f3f3f3;">
        <div class="container">
            <div class="heading-block heading-minimal heading-center">
                <h1>
                    Want to work with the developer?
                </h1>
            </div> <!-- /.heading-block -->
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <p class="text-center text-xl">
                        <em>The developer is currently available for hire so get in touch today.</em>
                        <br><br>
                        <a href="http://qizhang.azurewebsites.net/Contact" class="btn btn-primary btn-lg">Get In Touch</a>
                    </p>
                </div>
            </div>
            <br><br>
        </div> <!-- /.container -->
    </section>
</div> <!-- /.content -->
